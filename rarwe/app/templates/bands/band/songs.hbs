<ul class="list-group songs">
  <li class="list-group-item">
    {{ input type="text" class="new-song" placeholder="New Song" value=title }}
    <button class="btn btn-primary btn-sm new-song-button" disabled={{isAddButtonDisabled}} {{action "createSong"}}>Add</button>
  </li>
  {{#each model.songs as |song|}}
  <li class="list-group-item">
    <a href="javascript:;"><span class="glyphicon glyphicon-trash"></span></a>
    {{song.title}}
    <span class="rating pull-right">
      {{star-rating rating=song.rating item=song on-click=(action "updateRating")}}
    </span>
  </li>
  {{/each}}
</ul>
